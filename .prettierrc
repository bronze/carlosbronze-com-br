{
  "useTabs": false,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-organize-attributes"
  ],
  "attributeGroups": ["$CODE_GUIDE"],
  "overrides": [
    {
      "files": "**/*.astro",
      "options": { "parser": "astro" }
    }
  ]
}
