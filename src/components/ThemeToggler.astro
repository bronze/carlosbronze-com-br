{
  /*
https://github.com/cssninjaStudio/dokto/blob/0aa839d184121f4a708d3ff30b41c908b7e23b0b/src/components/base/ThemeToggler.astro#L19
*/
}
<label
  x-cloak
  class="focus-visible:tw-accessibility-static relative mx-auto block h-9 w-9 overflow-hidden rounded-full lg:m-0">
  <input
    type="checkbox"
    class="absolute left-0 top-0 z-[2] h-full w-full cursor-pointer opacity-0"
    @change="toggleTheme()"
  />
  <span
    class="dark:bg-muted-800 border-muted-300 dark:border-muted-700 relative block h-9 w-9 rounded-full border bg-white">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      aria-hidden="true"
      role="img"
      class="pointer-events-none absolute left-1/2 top-1/2 block h-5 w-5 text-yellow-400 transition-all duration-300"
      :class="[
        !$store.app.isDark
          ? 'opacity-100 -translate-x-[50%] -translate-y-1/2'
          : 'opacity-0  -translate-x-[50%] -translate-y-[150%]',
      ]"
      width="32"
      height="32"
      preserveAspectRatio="xMidYMid meet"
      viewBox="0 0 24 24">
      <g
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <circle cx="12" cy="12" r="5" class="fill-current"></circle>
        <path class="fill-current" d="M12 1v2"></path>
        <path class="fill-current" d="M12 21v2"></path>
        <path class="fill-current" d="M4.22 4.22l1.42 1.42"></path>
        <path class="fill-current" d="M18.36 18.36l1.42 1.42"></path>
        <path class="fill-current" d="M1 12h2"></path>
        <path class="fill-current" d="M21 12h2"></path>
        <path class="fill-current" d="M4.22 19.78l1.42-1.42"></path>
        <path class="fill-current" d="M18.36 5.64l1.42-1.42"></path>
      </g>
    </svg>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      aria-hidden="true"
      role="img"
      class="pointer-events-none absolute left-1/2 top-1/2 block h-5 w-5 text-yellow-400 transition-all duration-300"
      :class="[
        !$store.app.isDark
          ? 'opacity-0 -translate-x-[45%] -translate-y-[150%]'
          : 'opacity-100 -translate-x-[45%] -translate-y-1/2',
      ]"
      width="32"
      height="32"
      preserveAspectRatio="xMidYMid meet"
      viewBox="0 0 24 24">
      <g
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round">
        <path
          class="fill-current"
          d="M21 12.79A9 9 0 1 1 11.21 3A7 7 0 0 0 21 12.79z"></path>
      </g>
    </svg>
  </span>
</label>
