---
import { Icon } from 'astro-icon'
import Container from '@components/container.astro'
---

<footer
  class="mx-auto my-20 max-w-screen-xl border-t-[1px] border-gray-300 before:relative before:top-[0] before:flex before:w-full before:border-t-[1px] before:border-gray-600 before:content-[''] dark:border-gray-700"
  role="contentinfo">
  <Container>
    <div class="justify-center py-4 sm:flex sm:items-center sm:justify-between">
      <div class="flex items-center justify-center text-center">
        <span class="inline-flex items-center text-sm text-text">
          <Icon name="ph:code-bold" class="mr-1 inline-flex h-4 w-4" />
           Carlos Bronze {new Date().getFullYear()}
        </span>
        <span class="ml-2 text-center text-xs text-slate-500">
          based on <a
            href="https://astro.build/themes/details/astroship/"
            target="_blank"
            rel="noopener"
            class="hover:underline">Astroship</a
          >
           by
          <a
            href="https://web3templates.com"
            target="_blank"
            rel="noopener"
            class="hover:underline">
            Web3Templates
          </a>
        </span>
      </div>
      <div class="mt-4 flex justify-center space-x-5 sm:mt-0">
        <a
          href="https://linkedin.com/in/carlosbronze"
          rel="me"
          title="LinkedIn">
          <Icon name="mdi:linkedin" />
        </a>
        <a href="https://github.com/bronze" rel="me" title="GitHub">
          <Icon name="mdi:github" />
        </a>
      </div>
    </div>
  </Container>

  <style lang="scss">
    [astro-icon]:not([astro-icon='ph:code-bold']) {
      @apply h-full w-8 cursor-pointer text-gray-500 hover:text-primary;
      &:hover,
      &:focus,
      &:active {
        @apply text-primary;
      }
    }
  </style>
</footer>
