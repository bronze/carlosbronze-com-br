---
import { Icon } from 'astro-icon'
import Container from '@components/container.astro'
import Link from '@components/ui/link.astro'
import Dropdown from './dropdown.astro'
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar'
import { NavigationLinks } from '~/config'
---

<Container>
  <header
    class="my-5 flex flex-col items-center justify-between text-text lg:flex-row">
    <Astronav>
      <div class="flex w-full items-center justify-between lg:w-auto">
        <a href="/" class="ftext-lg">
          <span class="text-slate-500 dark:text-slate-400">Carlos</span>
          <span class="font-bold text-slate-800 dark:text-slate-200"
            >Bronze</span
          >
        </a>
        <div class="inline-flex lg:hidden">
          <button
            x-data="{ shiftPressed: false }"
            class="inline-flex cursor-pointer pr-4 lg:hidden"
            title="Dark Mode Toggle"
            x-on:click="toggleTheme()"
            rel="nofollow">
            <Icon name="mdi:theme-light-dark" class="h-full w-6" />
          </button>
          <MenuIcon class="h-4 w-4 text-text" />
        </div>
      </div>
      <MenuItems
        class="mt-2 hidden w-full font-semibold ftext-lg lg:mt-0 lg:flex lg:w-auto">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            NavigationLinks.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      rel="prefetch"
                      href={item.path}
                      class="flex py-2 text-text hover:text-primary lg:px-3">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="mt-3 flex items-center gap-4"></div>
        <div class="mt-3 flex items-center gap-4 lg:hidden">
          {
            /* JS comment syntax is also valid
          <!-- <Link href="#" style="muted" block size="md">Log in</Link>
          <Link href="#" size="md" block>Sign up</Link> -->
           */
          }
        </div>

        <button
          x-data="{ shiftPressed: false }"
          class="hidden cursor-pointer pl-4 lg:block"
          title="Dark Mode Toggle"
          x-on:click="toggleTheme()"
          rel="nofollow">
          <Icon name="mdi:theme-light-dark" class="h-full w-8" />
        </button>
      </MenuItems>
    </Astronav>
  </header>
</Container>

<script>
  // https://www.cyishere.dev/blog/astro-active-nav-item
  // simpler: https://www.youtube.com/watch?v=UEyuqqEbgkI https://gist.github.com/leabs/11e9f20a5580982428824148f62eb2a0
  const navLinks = document.querySelectorAll('nav a')

  navLinks.forEach(link => {
    link.classList.remove('active')

    // `slice` here to remove the first `/` in pathname
    const currentPath = window.location.pathname.slice('1')

    // `link.href` returns a whole url, such as: "https://somedomain.com/posts" and we only need the last part
    const hrefArray = link.href.split('/')
    const thisPath = hrefArray[hrefArray.length - 1]

    if (currentPath === thisPath) {
      link.classList.add('active')
      link.setAttribute('aria-current', 'page') // https://stackoverflow.com/questions/68241101/changing-active-class-and-aria-current-page-dynamically-based-on-active-webpa
    }
  })
</script>

<style lang="scss">
  button [astro-icon] {
    @apply cursor-pointer;
    &:hover,
    &:focus,
    &:active {
      @apply text-primary;
    }
  }
  .active {
    text-decoration-line: underline;
    text-decoration-thickness: 0.2rem;
    text-underline-offset: 0.5rem;
  }
</style>
